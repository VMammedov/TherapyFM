@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section styles {
    <link rel="stylesheet" type="text/css" href="~/css/style.min.css">
}

@section scripts {
    <script src="~/lib/vendor/jquery.count-to/jquery.count-to.min.js"></script>
}

<main class="main">
    <nav class="breadcrumb-nav">
        <div class="container">
            <ul class="breadcrumb">
                <li><a href="/Home/Index/?ui-culture=@System.Threading.Thread.CurrentThread.CurrentCulture.ToString()"><i class="d-icon-home"></i></a></li>
                <li>@Localizer["About"]</li>
            </ul>
        </div>
    </nav>
    <div class="page-header pl-4 pr-4" style="background-image: url('@Url.Content("~/images/subpages/about-us-banner.jpg")')">
        <h3 class="page-subtitle font-weight-bold">HealthYFM</h3>
        <h1 class="page-title font-weight-bold lh-1 text-white text-capitalize">@Localizer["Our_serv"]</h1>
        <p class="page-desc text-white mb-0">
            Lorem quis bibendum auctor, nisi elit consequat ipsum, nec
            sagittis sem nibh id elit.
        </p>
    </div>
    <div class="page-content mt-10 pt-10">
        <section class="about-section pb-10 appear-animate">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-4 mb-10 mb-lg-4">
                        <h5 class="section-subtitle lh-2 ls-md font-weight-normal">01. @Localizer["Header1"]</h5>
                        <h3 class="section-title lh-1 font-weight-bold">
                            @Localizer["Header1_text"]
                        </h3>
                    </div>
                    <div class="col-lg-8 ">
                        <div class="row">
                            <div class="col-md-4 mb-4">
                                <div class="counter text-center text-dark">
                                    <span class="count-to" data-to="35" data-refresh-interval="50">0</span>
                                    <h5 class="count-title font-weight-bold text-body ls-md">@Localizer["Customers"]</h5>
                                </div>
                            </div>
                            <div class="col-md-4 mb-4">
                                <div class="counter text-center text-dark">
                                    <span class="count-to" data-to="50" data-refresh-interval="50">0</span>
                                    <h5 class="count-title font-weight-bold text-body ls-md">@Localizer["Doctors"]</h5>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <section class="customer-section pb-10">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-7 mb-4">
                        <figure>
                            <img src="~/images/subpages/about-us-img-1.jpg" alt="Happy Customer" width="580"
                                 height="507" class="banner-radius" style="background-color: #BDD0DE;" />
                        </figure>
                    </div>
                    <div class="col-md-5 mb-4">
                        <h5 class="section-subtitle lh-2 ls-md font-weight-normal">02. @Localizer["Header2_Subheader"]</h5>
                        <h3 class="section-title lh-1 font-weight-bold">@Localizer["Header2"]</h3>
                        <p class="section-desc text-grey">
                            @Localizer["Header2_text"]
                        </p>
                        <a href="/Contact/Index/?ui-culture=@System.Threading.Thread.CurrentThread.CurrentCulture.ToString()" class="btn btn-dark btn-link btn-underline ls-m">
                            @Localizer["Button_text"]<i class="d-icon-arrow-right"></i>
                        </a>
                    </div>
                </div>
            </div>
        </section>

        <section class="store-section pb-10">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-md-6 order-md-first mb-4">
                        <h5 class="section-subtitle lh-2 ls-md font-weight-normal mb-1">03. @Localizer["Header3_Subheader"]</h5>
                        <h3 class="section-title lh-1 font-weight-bold">@Localizer["Header3"]</h3>
                        <p class="section-desc text-grey">
                            @Localizer["Header3_text"]
                        </p>
                        <a href="/Contact/Index/?ui-culture=@System.Threading.Thread.CurrentThread.CurrentCulture.ToString()" class="btn btn-dark btn-link btn-underline ls-m">
                            @Localizer["Button_text"]<i class="d-icon-arrow-right"></i>
                        </a>
                    </div>
                    <div class="col-md-6 mb-4">
                        <figure>
                            <img src="~/images/subpages/about-us-img-2.jpg" width="580" height="507"
                                 class="banner-radius" style="background-color: #DEE6E8;" />
                        </figure>
                    </div>
                </div>
            </div>
        </section>

        <section class="team-section pt-8 mt-10 pb-10 mb-6 appear-animate">
            <div class="container">
                <h5 class="section-subtitle lh-2 ls-md font-weight-normal mb-1 text-center">04. @Localizer["Header4_text"]</h5>
                <h3 class="section-title lh-1 font-weight-bold text-center mb-5">@Localizer["Header4"]</h3>
                <div class="row cols-sm-2 cols-md-4">
                    <div class="member appear-animate" data-animation-options="{'name': 'fadeInLeftShorter'}">
                        <figure class="banner-radius">
                            <img src="~/images/subpages/team1.jpg" alt="team member" width="280" height="280"
                                 style="background-color: #EEE;">
                            <div class="overlay social-links">
                                <a href="#" class="social-link social-facebook fab fa-facebook-f"></a>
                                <a href="#" class="social-link social-twitter fab fa-twitter"></a>
                                <a href="#" class="social-link social-linkedin fab fa-linkedin-in"></a>
                            </div>
                        </figure>
                        <h4 class="member-name">Filankes Filankesov</h4>
                        <h5 class="member-job">Ceo / Founder</h5>
                    </div>
                    <div class="member appear-animate"
                         data-animation-options="{'name': 'fadeInLeftShorter', 'delay': '.3s'}">
                        <figure class="banner-radius">
                            <img src="~/images/subpages/team2.jpg" alt="team member" width="280" height="280"
                                 style="background-color: #121A1F;">
                            <div class="overlay social-links">
                                <a href="#" class="social-link social-facebook fab fa-facebook-f"></a>
                                <a href="#" class="social-link social-twitter fab fa-twitter"></a>
                                <a href="#" class="social-link social-linkedin fab fa-linkedin-in"></a>
                            </div>
                        </figure>
                        <h4 class="member-name">Filankes Filankesov</h4>
                        <h5 class="member-job">Support manager / founder</h5>
                    </div>
                    <div class="member appear-animate"
                         data-animation-options="{'name': 'fadeInLeftShorter', 'delay': '.4s'}">
                        <figure class="banner-radius">
                            <img src="~/images/subpages/team3.jpg" alt="team member" width="280" height="280"
                                 style="background-color: #E8E7E3;">
                            <div class="overlay social-links">
                                <a href="#" class="social-link social-facebook fab fa-facebook-f"></a>
                                <a href="#" class="social-link social-twitter fab fa-twitter"></a>
                                <a href="#" class="social-link social-linkedin fab fa-linkedin-in"></a>
                            </div>
                        </figure>
                        <h4 class="member-name">Filankes Filankesov</h4>
                        <h5 class="member-job">Doctor</h5>
                    </div>
                    <div class="member appear-animate"
                         data-animation-options="{'name': 'fadeInLeftShorter', 'delay': '.5s'}">
                        <figure class="banner-radius">
                            <img src="~/images/subpages/team4.jpg" alt="team member" width="280" height="280"
                                 style="background-color: #465D7F;">
                            <div class="overlay social-links">
                                <a href="#" class="social-link social-facebook fab fa-facebook-f"></a>
                                <a href="#" class="social-link social-twitter fab fa-twitter"></a>
                                <a href="#" class="social-link social-linkedin fab fa-linkedin-in"></a>
                            </div>
                        </figure>
                        <h4 class="member-name">Filankes Filankesov</h4>
                        <h5 class="member-job">Support</h5>
                    </div>
                </div>
            </div>
        </section>
        <!-- End Team Section -->
    </div>
</main>